<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:el="urn:import:com.google.gwt.user.client.ui"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:c="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <gxt:ContentPanel headingText="Информация о лекции" pixelSize="300,300" bodyStyle="padding: 20px">
        <container:VBoxLayoutContainer VBoxLayoutAlign="STRETCH">
            <!--First Name-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="Название"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="title" allowBlank="false"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--Classroom-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="Аудитория"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="classroom" allowBlank="true"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--Description-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="Описание"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="description" allowBlank="true"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--Homework-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="Домашнее задание"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="homework" allowBlank="true"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--Buttons-->
            <container:HBoxLayoutContainer pack="CENTER">
                <container:child >
                    <button:TextButton ui:field="saveButton" text="Сохранить"  />
                </container:child>
                <container:child>
                    <button:TextButton ui:field="cancelButton" text="Отмена" />
                </container:child>
            </container:HBoxLayoutContainer>
        </container:VBoxLayoutContainer>
    </gxt:ContentPanel>
</ui:UiBinder>