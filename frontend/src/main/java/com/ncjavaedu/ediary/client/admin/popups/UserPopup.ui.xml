<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:el="urn:import:com.google.gwt.user.client.ui"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:c="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
             field="courseLayoutData">
        <ui:attributes width="1" height="1" />
    </ui:with>

    <gxt:ContentPanel headingText="Информация о пользователе" pixelSize="300,300" bodyStyle="padding: 20px">
        <container:VBoxLayoutContainer VBoxLayoutAlign="STRETCH">
            <!--First Name-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="Имя"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="firstName" allowBlank="false"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--Last Name-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="Фамилия"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="lastName" allowBlank="true"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--University-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="Университет"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="university" allowBlank="true"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--E-mail-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="E-mail"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="email" allowBlank="true"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--Login-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="Логин"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="login" allowBlank="false"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--Password-->
            <container:HBoxLayoutContainer>
                <container:child>
                    <form:FieldLabel text="Пароль"/>
                </container:child>
                <container:child>
                    <form:TextField ui:field="password" allowBlank="false"/>
                </container:child>
            </container:HBoxLayoutContainer>

            <!--Buttons-->
            <container:HBoxLayoutContainer pack="CENTER">
                <container:child >
                    <button:TextButton ui:field="saveButton" text="Сохранить"  />
                </container:child>
                <container:child>
                    <button:TextButton ui:field="cancelButton" text="Отмена" />
                </container:child>
            </container:HBoxLayoutContainer>
        </container:VBoxLayoutContainer>
    </gxt:ContentPanel>
</ui:UiBinder>