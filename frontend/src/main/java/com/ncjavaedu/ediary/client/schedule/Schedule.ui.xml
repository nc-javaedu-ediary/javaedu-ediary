<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:table="urn:import:com.google.gwt.user.client.ui"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container">

    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
             field="week">
        <ui:attributes width="1" height="0.2"/>
    </ui:with>
    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
             field="timetable">
        <ui:attributes width="1" height="0.8"/>
    </ui:with>

    <gxt:ContentPanel headingText="Расписание">
        <container:VerticalLayoutContainer>
            <container:HorizontalLayoutContainer ui:field="dates" layoutData="{week}">

            </container:HorizontalLayoutContainer>

            <container:child layoutData="{timetable}">
                <table:FlexTable ui:field="table" borderWidth="1" cellPadding="5" width="1"/>
            </container:child>
        </container:VerticalLayoutContainer>
    </gxt:ContentPanel>
</ui:UiBinder>