    <gxt:ContentPanel headingText="Страница лекции" bodyStyle="padding: 20px" pixelSize="800,400"
                      styleName="{style.lecture}">
        <container:VerticalLayoutContainer>
            <container:VBoxLayoutContainer VBoxLayoutAlign="CENTER">
                <container:HBoxLayoutContainer>
                    <form:FieldLabel text="Тема лекции"/>
                    <gwt:Label ui:field="theme"/>
                </container:HBoxLayoutContainer>
                <container:HorizontalLayoutContainer>
                    <container:HBoxLayoutContainer>
                        <form:FieldLabel text="Дата"/>
                        <gwt:Label ui:field="lectDate"/>
                    </container:HBoxLayoutContainer>
                    <container:HBoxLayoutContainer>
                        <container:child>
                            <form:FieldLabel text="Лектор"/>
                        </container:child>
                        <container:child>
                            <gwt:Label ui:field="lecturer" styleName="{style.label}"/>
                        </container:child>
                    </container:HBoxLayoutContainer>
                </container:HorizontalLayoutContainer>
            </container:VBoxLayoutContainer>
            <container:VerticalLayoutContainer width="1">
                <form:FieldLabel text="Содержание лекции"/>
                <gwt:Label ui:field="description"/>
            </container:VerticalLayoutContainer>
            <container:VerticalLayoutContainer width="1">
                <form:FieldLabel text="Домашняя работа"/>
                <gwt:Label ui:field="homework"/>
            </container:VerticalLayoutContainer>
