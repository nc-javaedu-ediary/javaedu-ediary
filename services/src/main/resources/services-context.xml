<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">

    <context:annotation-config />

    <tx:annotation-driven/>

    <bean id="propertyConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list />
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <beans profile="production" >
        <context:component-scan base-package="com.ncjavaedu.ediary.dao.impl"/>
        <context:component-scan base-package="com.ncjavaedu.ediary.configuration"/>
        <context:component-scan base-package="com.ncjavaedu.ediary.services.impl"/>
    </beans>

    <beans profile="local">
        <context:component-scan base-package="com.ncjavaedu.ediary.services.stub"/>
    </beans>

</beans>